<!DOCTYPE html>
<html lang="en">
     
<%- include ('./partials/head') %>    

<body>
   
<%- include ('./partials/header') %>

<main id="cuerpoArba">
    <section>
        <% if (p.length != 0) { %>
            <% for (let i=0 ; i<p.length ; i++) { %>
            <div id="prodCarrito">
                    
                        <img src="../public/imagenes/<%=p[i].imagen%>" class="fotosCarrito">
                        <div id="textoProducto">
                            <p class="textosPS"><%=p[i].nombre %> </p>
                            <br>
                            <p class="textosPSP"><%=p[i].precio %>$</p>
                        </div>
                    
                </div>
            <% } %>
            
            <button type="submit" id="botonCarrito" class="btn btn-dark"> Comprar</button>
        <% } else { %>
            <div id="sinProdDiv">
                <p id="sinProd"> No ha seleccionado ningun producto! Agregue uno al carrito para poder comprarlo. </p>
            </div>
        <% } %> 
    </section>
    <br>
</main>
    
<%- include ('./partials/footer') %>    


</body>
</html>